<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="android:colorPrimary">@color/xedroid_red</item>
        <item name="android:colorPrimaryDark">@color/xedroid_darkRed</item>

        <item name="android:actionBarStyle">@style/XedroidActionBar</item>
        <item name="actionBarStyle">@style/XedroidActionBar</item>

    </style>

    <style name="XedroidActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="android:background">@color/xedroid_red</item>

        <item name="background">@color/xedroid_red</item>

    </style>

</resources>
